{
  "include": ["./src", "./tests", "./examples"],
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": ".",

    // compile to modern JS
    "target": "ESNext",

    // TODO: make this NodeNext when we get past the "inferred type cannot be named" errors
    "module": "ES2022",
    "moduleResolution": "Node10",

    "lib": ["dom", "esnext"],

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "allowSyntheticDefaultImports": true
  }
}
