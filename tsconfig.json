{
  "include": ["./src"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["dom", "esnext"],
    "outDir": "./build",
    "rootDir": ".",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "noEmit": true, // TODO, remove when TS update lands
    "allowImportingTsExtensions": true
  }
}
